# Uygulama Yapılandırması
NODE_ENV=development
PORT=5000

# Veritabanı Yapılandırması
DB_HOST=localhost
DB_PORT=5432
DB_NAME=destek_sistemi
DB_USER=postgres
DB_PASSWORD=yourpassword

# JWT (Json Web Token) Yapılandırması
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRY=24h

# E-posta Yapılandırması
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=noreply@example.com
EMAIL_PASS=your_email_password
EMAIL_FROM=Destek Sistemi <noreply@example.com>
EMAIL_SECURE=false

# Dosya Yükleme Limitleri
FILE_UPLOAD_MAX_SIZE=5242880 # 5MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/plain

# Socket.IO Yapılandırması
SOCKET_CORS_ORIGIN=http://localhost:3000

# SLA Yapılandırması
SLA_DEFAULT_RESPONSE_TIME=240 # Dakika
SLA_DEFAULT_RESOLUTION_TIME=1440 # Dakika

# Frontend URL
FRONTEND_URL=http://localhost:3000
